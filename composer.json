{
  "name": "on1kel/hyperf-skeleton",
  "type": "project",
  "description": "Скелет Hyperf проекта для разработки API",
  "keywords": [
    "php",
    "swoole",
    "framework",
    "hyperf",
    "microservice",
    "middleware",
    "crud"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-sodium": "*",
    "friendsofhyperf/telescope": "~3.1.0",
    "hyperf/database-pgsql": "~3.1.0",
    "hyperf/cache": "~3.1.0",
    "hyperf/command": "~3.1.0",
    "hyperf/config": "~3.1.0",
    "hyperf/db-connection": "~3.1.0",
    "hyperf/engine": "^2.10",
    "hyperf/framework": "~3.1.0",
    "hyperf/guzzle": "~3.1.0",
    "hyperf/http-server": "~3.1.0",
    "hyperf/laminas-mime": "^3.0",
    "hyperf/logger": "~3.1.0",
    "hyperf/memory": "~3.1.0",
    "hyperf/process": "~3.1.0",
    "on1kel/hyperf-lighty": "^1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpstan/phpstan": "^2.1",
    "doctrine/dbal": "^3.6",
    "friendsofhyperf/ide-helper": "^3.1",
    "symfony/var-dumper": "^7.3",
    "hyperf/testing": "~3.1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "./test/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },

  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.localhost', '.env');\""
    ],
    "analyse": "vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress",
    "format": "vendor/bin/php-cs-fixer fix --config cs_dist.php --allow-risky=yes --show-progress=none",
    "helpers": "@php ./bin/hyperf.php ide-helper:model"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
